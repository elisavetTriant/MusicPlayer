<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextViewsLarge">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">@dimen/text_views_text_size_large</item>
    </style>
    <style name="TextViewsHeadings">
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textSize">@dimen/text_views_text_size_large</item>
        <item name="android:background">@color/colorTextDark</item>
    </style>

</resources>
